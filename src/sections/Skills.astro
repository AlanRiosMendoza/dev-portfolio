---
import { data } from "@/data.ts";
import SkillIcon from "@/assets/svg/skillIcon.svg";
---

<section id="habilidades" class="scroll-mt-17">
    <h2
        class="flex items-center gap-2 text-2xl font-semibold text-gray-900 dark:text-gray-100 mb-4"
    >
        <svg width="20" height="20">
            <use xlink:href="#Skill"></use>
        </svg>
        Habilidades
    </h2>

    <div class="space-y-6">
        {
            data.skills.map((group) => (
                <div class="relative flex flex-col rounded-xl border border-white/10 bg-white/20 dark:bg-gray-900/40 backdrop-blur-md p-6 shadow-md transition-transform duration-300 hover:scale-[1.01] hover:shadow-xl">
                    <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4">
                        {group.title}
                    </h3>
                    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
                        {group.items.map((skill) => (
                            <div class="flex flex-col items-center justify-center rounded-lg bg-white/80 dark:bg-gray-800 text-gray-800 dark:text-gray-200 shadow-sm p-3 text-sm font-medium transition-transform duration-300 hover:scale-105">
                                <svg width="40" height="40">
                                    <use xlink:href={skill.icon} />
                                </svg>
                                {skill.name}
                            </div>
                        ))}
                    </div>
                </div>
            ))
        }
    </div>
</section>
