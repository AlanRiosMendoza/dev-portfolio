---
import { data } from "@/data.ts";
---

<div
    class="relative flex flex-col lg:flex-row sm:flex-row md:flex-row gap-5
         w-full mx-auto rounded-xl border border-white/10
         p-6 sm:px-6 lg:px-8 items-center
         bg-white/20 dark:bg-gray-900/40 backdrop-blur-md shadow-md
         transition-transform duration-300 hover:scale-[1.01] hover:shadow-xl
         overflow-hidden"
>
    <img
        src={data.avatar}
        alt="Foto de perfil"
        class="w-40 h-52 sm:w-44 sm:h-56 md:w-48 md:h-60 object-cover object-top
           rounded-2xl border-4 border-white dark:border-gray-800 shadow-lg flex-shrink-0"
    />

    <div
        class="flex flex-col gap-3 w-full max-w-full
        lg:flex-1 lg:items-start lg:text-left
           items-center text-center md:items-start md:text-left sm:flex-1
           sm:w-full sm:max-w-md sm:items-start sm:text-left
          break-words"
    >
        <a
            href="https://btlk.vercel.app/alan"
            target="_blank"
            rel="noopener"
            class="transition-transform hover:scale-105"
        >
            <div
                class="relative inline-flex p-[1px] overflow-hidden rounded-full"
            >
                <span
                    class="absolute inset-[-1000%] animate-spin-slow
                 bg-[conic-gradient(from_90deg_at_50%_50%,#51E4B8_0%,#21554E_50%,#51E4B8_100%)]"
                ></span>
                <div
                    class="relative inline-flex items-center justify-center px-3 py-1 text-sm
                 text-green-800 bg-green-100 rounded-full cursor-pointer
                 dark:bg-gray-800 dark:text-green-300 backdrop-blur-3xl whitespace-nowrap"
                >
                    Disponible para trabajar
                </div>
            </div>
        </a>

        <h1
            class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-gray-100 w-full break-words"
        >
            {data.name}
        </h1>

        <span
            class="flex items-start gap-2 text-sm sm:text-base text-gray-700 dark:text-gray-300 break-words"
        >
            {data.role}
        </span>

        <span
            class="flex items-start gap-2 text-sm sm:text-base text-gray-700 dark:text-gray-300 break-words"
        >
            <svg width="20" height="20" class="mt-0.5 flex-shrink-0">
                <use xlink:href="#Location"></use>
            </svg>
            {data.location.city}, {data.location.country}
        </span>

        

        <div
            class="flex flex-row flex-wrap gap-3 mt-3 w-full justify-center md:justify-start"
        >
            <a
                href={data.cv.url}
                target="_blank"
                rel="noopener noreferrer"
                class="flex-1 min-w-[140px] px-4 py-2 text-white text-center rounded-lg
           bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-600
           transition-colors duration-300 flex items-center justify-center gap-2"
            >
                <svg width="25" height="25">
                    <use xlink:href="#CV"></use>
                </svg>
                CV
            </a>

            <a
                href={data.contact.contacts.find((c) => c.name === "WhatsApp")
                    ?.url}
                target="_blank"
                rel="noopener noreferrer"
                class="flex-1 min-w-[140px] px-4 py-2 text-white text-center rounded-lg
           bg-green-500 hover:bg-green-600 dark:bg-green-400 dark:hover:bg-green-500
           transition-colors duration-300 flex items-center justify-center gap-2"
            >
                <svg width="25" height="25">
                    <use xlink:href="#WhatsApp"></use>
                </svg>
                WhatsApp
            </a>
        </div>
    </div>
</div>
