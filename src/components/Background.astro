        class="fixed inset-0 h-full w-full opacity-[0.15] dark:opacity-[0.07]"
        xmlns="http://www.w3.org/2000/svg"
    >
        <filter id="noise">
            <feTurbulence
                type="fractalNoise"
                baseFrequency="0.65"
                numOctaves="3"
                stitchTiles="stitch"></feTurbulence>
